            <Label Text="Recognize dog" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="inputAddress" Text="http://192.168.43.52:3000"></Entry>
        <TableView x:Name="ImagesListView"  BackgroundColor="#ddd">
            
        </TableView>
