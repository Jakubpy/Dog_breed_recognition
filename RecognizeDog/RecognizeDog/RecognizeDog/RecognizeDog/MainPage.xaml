        </Image>
        <Button x:Name="btnCamera" WidthRequest="60" HeightRequest="60" CornerRadius="30" HorizontalOptions="Center" BorderWidth="2" BorderColor="OrangeRed" Clicked="OnCameraButtonClicked">
            
        </Button>
